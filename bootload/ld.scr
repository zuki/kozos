OUTPUT_FORMAT("elf32-h8300")
OUTPUT_ARCH(h8300h)
ENTRY("_start")

MEMORY
{
    romall(rx)      : o = 0x000000, l = 0x080000 /* 512KB */
    vectors(r)      : o = 0x000000, l = 0x000100 /* top of ROM */
    rom(rx)         : o = 0x000100, l = 0x07ff00

    ramall(rwx)     : o = 0xffbf20, l = 0x004000 /* 16KB */
    buffer(rwx)     : o = 0xffdf20, l = 0x001d00 /*  8KB */
    data(rwx)       : o = 0xfffc20, l = 0x000300
    stack(rw)       : o = 0xffff00, l = 0x000000 /* end of RAM */
}

SECTIONS
{
    .vectors : {
        vector.o(.data)
    } > vectors

    .text : {
        _text_start = . ;
        *(.text)
        *(.text.*)
        _etext = . ;
    } > rom

    .rodata : {
        _rodata_start = . ;
        *(.strings)
        *(.rodata)
        *(.rodata.*)
        . = ALIGN(4);/* http://kozos.jp/books/makeos/index.html#binutils-new */
        _erodata = . ;
    } > rom

    .buffer : {
        _buffer_start = .;
    } > buffer

    .data : {
        _data_start = . ;
        *(.data)
        _edata = . ;
    } > data AT> rom

    .bss : {
        _bss_start = . ;
        *(.bss)
        *(COMMON)
        _ebss = . ;
    } > data AT> rom

    . = ALIGN(4);
    _end = . ;

    .stack : {
        _stack = . ;
    } > stack
}
